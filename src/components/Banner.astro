<script src="https://unpkg.com/siema@1.5.1/dist/siema.min.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // @ts-ignore
    const slider = new Siema({
      duration: 400,
      loop: true,
    });

    const dots = document.querySelectorAll(".dot");
    const prevBtn = document.getElementById("prevBtn");
    const nextBtn = document.getElementById("nextBtn");
    let current = 0;
    let autoplayInterval;

    function updateDots(index) {
      dots[current].classList.remove("bg-white");
      dots[current].classList.add("bg-gray-400");
      dots[index].classList.add("bg-white");
      dots[index].classList.remove("bg-gray-400");
      current = index;
    }

    function startAutoplay() {
      autoplayInterval = setInterval(() => {
        const nextIndex = (current + 1) % dots.length;
        slider.next();
        updateDots(nextIndex);
      }, 4000);
    }

    function resetAutoplay() {
      clearInterval(autoplayInterval);
      startAutoplay();
    }

    dots.forEach((dot, i) => {
      dot.addEventListener("click", () => {
        slider.goTo(i);
        updateDots(i);
        resetAutoplay();
      });
    });

    prevBtn.addEventListener("click", () => {
      slider.prev();
      const prevIndex = (current - 1 + dots.length) % dots.length;
      updateDots(prevIndex);
      resetAutoplay();
    });

    nextBtn.addEventListener("click", () => {
      slider.next();
      const nextIndex = (current + 1) % dots.length;
      updateDots(nextIndex);
      resetAutoplay();
    });

    updateDots(0);
    startAutoplay();
  });
</script>
